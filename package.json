{
	"name": "dothttp-runner",
	"displayName": "dothttp-runner",
	"description": "run dothttp files in vscode natively",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:dothttp.command.run"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dothttp.command.run",
				"title": "run http file",
				"category": "Dothttp"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "dothttp.command.run",
					"group": "navigation",
					"when": "resourceExtname == .http || resourceExtname == .dhttp"
				}
			],
			"commandPalette": [
				{
					"command": "dothttp.command.run",
					"when": "resourceExtname == .http || resourceExtname == .dhttp"
				}
			]
		},
		"configuration": [
			{
				"title": "Dothttp Configuration",
				"properties": {
					"dothttp.conf.pythonpath": {
						"type": "string",
						"default": "/usr/bin/python3",
						"description": "python installation location for making requests"
					},
					"dothttp.conf.path": {
						"type": "string",
						"default": "/usr/bin/dothttp",
						"description": "dothttp installation location"
					},
					"dothttp.conf.experimental": {
						"type": "boolean",
						"default": false,
						"description": "enables experimental features by setting to `ture`"
					},
					"dothttp.conf.nocookie": {
						"type": "boolean",
						"default": false,
						"description": "disables cookie save feature by setting to `ture`"
					},
					"dothttp.conf.history": {
						"type": "boolean",
						"default": false,
						"description": "save history of requests by setting to `ture`"
					},
					"dothttp.conf.curl": {
						"type": "boolean",
						"default": false,
						"description": "genererate curl command only!"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.0",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}